{
	"plugins": ["prettier-plugin-astro"],
	"endOfLine": "auto",
	"overrides": [
		{
			"files": "*.jsonc",
			"options": {
				"trailingComma": "none"
			}
		},
		{
			"files": "*.md",
			"options": {
				"printWidth": 80,
				"proseWrap": "always"
			}
		},
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	],
	"singleAttributePerLine": true
}
