{
	"name": "galeed.link",
	"private": true,
	"type": "module",
	"version": "0.0.1",
	"keywords": [
		"Astro",
		"TypeScript",
		"CSS"
	],
	"bugs": {
		"url": "https://github.com/GaleedGutierrez/galeed.link/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GaleedGutierrez/galeed.link.git"
	},
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.0.0"
	},
	"homepage": "https://github.com/GaleedGutierrez/galeed.link#readme",
	"license": "MIT",
	"author": "Galeed Gutierrez <galeedeveloper@gmail.com> (https://galeedgutierrez.com/)",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint ./ --max-warnings 0",
		"lint:fix": "eslint --fix ./**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,json,astro}",
		"prettier": "prettier ./ --check",
		"prettier:fix": "prettier ./ --write",
		"stylelint": "stylelint ./**/*.{css,scss} --allow-empty-input",
		"stylelint:fix": "stylelint --fix ./**/*.{css,scss} --allow-empty-input",
		"lint-text": "textlint ./**/*.md ",
		"lint-text:fix": "textlint --fix ./**/*.md ",
		"lint-md": "markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" **/*.md \"#node_modules\" && npm run lint-text",
		"lint-md:fix": "markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" --fix **/*.md \"#node_modules\" && npm run lint-text:fix",
		"check-for-dupes": "jscpd ./",
		"test": "vitest run",
		"test:e2e": "playwright test",
		"test:performance": "lighthouse http://localhost:4173/ --view --output html --output-path ./lighthouse-report/lighthouse-report.html",
		"prepare": "husky"
	},
	"dependencies": {
		"astro": "^5.12.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.31.0",
		"@stylistic/eslint-plugin": "^5.2.2",
		"@typescript-eslint/parser": "^8.38.0",
		"@vitest/eslint-plugin": "^1.3.4",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-check-file": "^3.3.0",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jsdoc": "^51.4.1",
		"eslint-plugin-jsonc": "^2.20.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-playwright": "^2.2.0",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sort-class-members": "^1.21.0",
		"eslint-plugin-tsdoc": "^0.4.0",
		"eslint-plugin-unicorn": "^60.0.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"husky": "^9.1.7",
		"jscpd": "^4.0.5",
		"markdownlint-cli2": "^0.18.1",
		"prettier": "3.6.2",
		"prettier-plugin-astro": "0.14.1",
		"stylelint": "^16.23.0",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-order": "^7.0.0",
		"stylelint-prettier": "^5.0.3",
		"textlint": "^15.2.0",
		"textlint-filter-rule-comments": "^1.2.2",
		"textlint-rule-terminology": "^5.2.14",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0"
	},
	"lint-staged": {
		"*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,json,astro}": "eslint --fix",
		"*{css,s(a|c)ss}": "stylelint --fix",
		"*.{md,mdx}": [
			"markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" --fix",
			"textlint --fix",
			"prettier --write"
		],
		"*.{json,jsonc}": [
			"prettier --write"
		]
	},
	"jscpd": {
		"threshold": 5,
		"reporters": [
			"silent"
		],
		"ignore": [
			"**/.astro/**",
			"**/node_modules/**",
			"**/dist/**",
			"**/dist-dev/**",
			"**/build/**",
			"**/fonts/**",
			"**/coverage/**",
			"**/playwright-reports/**",
			"**/test-results/**",
			"**/lighthouse-report/**",
			"**/tsconfig.*.json",
			"**/components/ui/**",
			"**/*.svg"
		],
		"absolute": true
	}
}
