---
import "../styles/index.css";

import { Schema } from "astro-seo-schema";

import { personalSchema } from "@/data/personalSchema";
// import { SEO } from "astro-seo";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf8" />
		<meta
			content="width=device-width"
			name="viewport"
		/>
		<link
			href="/favicon.svg"
			rel="icon"
			type="image/svg+xml"
		/>
		<link
			href="/sitemap-index.xml"
			rel="sitemap"
		/>
		<style>
			:root {
				--font-fallback:
					system-ui, -apple-system, blinkmacsystemfont, "Segoe UI",
					"Noto Sans", helvetica, arial, sans-serif,
					"Apple Color Emoji", "Segoe UI Emoji";
				--font-fallback-primary: Arial, var(--font-fallback);
				--font-primary: "Manrope", var(--font-fallback-primary);
			}

			@font-face {
				font-family: "Manrope";
				src: url("/src/assets/fonts/Manrope/Manrope-VariableFont_wght.woff2")
					format("woff2");
				font-display: swap;
			}
		</style>
		<!-- <SEO
			title="Galeed Gutierrez"
			titleTemplate="%s | Galeed Gutierrez"
			titleDefault="Galeed Gutierrez"
			description="Frontend developer especializado en la creaciÃ³n de interfaces de usuario con un enfoque en el rendimiento y la accesibilidad."
			canonical="https://galeed.link"
			charset="utf8"
			lang="es"
			robots="index, follow"
			openGraph={{
				basic: {
					title: "Galeed Gutierrez",
					type: "website",
					// image: ""
				},
				image: {
					alt: "Galeed Gutierrez profile picture",
				},
			}}
			canonical="/"
			noindex={false}
			nofollow={false}
			surpressWarnings={true}
		/> -->
		<Schema
			item={{
				"@context": "https://schema.org",
				"@type": "Person",
				name: personalSchema.name,
				alternateName: personalSchema.alternateName,
				url: "https://galeed.link",
				image: "https://galeed.link/profile.webp",
				jobTitle: "Frontend Developer",
				description:
					"Desarrollador frontend con experiencia en React, Astro y pruebas E2E. Apasionado por crear interfaces limpias, funcionales y accesibles.",
				sameAs: [
					personalSchema.socialLinks.github,
					personalSchema.socialLinks.linkedin,
					personalSchema.socialLinks.x,
					personalSchema.socialLinks.personalWebsite,
					personalSchema.socialLinks.portfolio,
				],
				knowsAbout: personalSchema.skills,
				alumniOf: personalSchema.education,
				hasOccupation: personalSchema.jobProfile,
				hasPart: personalSchema.relatedProjects,
			}}
		/>
		<title>Galeed Gutierrez</title>
	</head>
	<body>
		<slot />
		<script>
			import { loadFonts } from "@utils/loadFonts";

			loadFonts(["1em Manrope"]);
		</script>
		<script
			defer
			src={"https://www.googletagmanager.com/gtag/js?id=G-XEPRCKCX47"}
			type="text/partytown"
		></script>
		<script defer type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-XEPRCKCX47");
		</script>
		<script defer type="text/partytown">
			function sendToGoogleAnalytics({ name, delta, id }) {
				gtag("event", name, {
					event_category: "Web Vitals",
					event_label: id,
					value: Math.round(name === "CLS" ? delta * 1000 : delta),
					non_interaction: true,
				});
			}

			(function () {
				var script = document.createElement("script");
				script.src =
					"https://unpkg.com/web-vitals@5/dist/web-vitals.iife.js";
				script.onload = function () {
					webVitals.onCLS(sendToGoogleAnalytics);
					webVitals.onINP(sendToGoogleAnalytics);
					webVitals.onLCP(sendToGoogleAnalytics);
				};
				document.head.appendChild(script);
			})();
		</script>
	</body>
</html>
